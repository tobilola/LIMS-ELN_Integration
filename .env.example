# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://lims:password@postgres:5432/lims_eln
DATABASE_POOL_SIZE=20

# Database - MongoDB
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DATABASE=lims_eln

# Cache - Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=900

# Message Queue
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

# Security
JWT_SECRET_KEY=change-this-to-a-secure-random-key-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Systems - LIMS
LIMS_API_URL=https://lims.example.com/api
LIMS_API_KEY=
LIMS_SYSTEM_TYPE=labware

# External Systems - ELN
ELN_API_URL=https://eln.example.com/api
ELN_API_KEY=
ELN_SYSTEM_TYPE=benchling

# ML Models
MODEL_PATH=app/ml/models
ANOMALY_THRESHOLD=0.15
ML_BATCH_SIZE=32

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5
